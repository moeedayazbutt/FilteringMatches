<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvLblHasPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="Has Photo:"/>
        <Switch
            android:id="@+id/swtPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvLblHasPhoto"
            android:layout_toRightOf="@+id/tvLblHasPhoto"
            android:layout_centerInParent="true"/>
        <CheckBox
            android:id="@+id/cbPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Enable Filter"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvLblInContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="In Contact:"/>
        <Switch
            android:id="@+id/swtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvLblInContact"
            android:layout_toRightOf="@+id/tvLblInContact"
            android:layout_centerInParent="true"/>
        <CheckBox
            android:id="@+id/cbContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Enable Filter"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="Favorite:"/>
        <Switch
            android:id="@+id/swtFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvFavorite"
            android:layout_toRightOf="@+id/tvFavorite"
            android:layout_centerInParent="true"/>
        <CheckBox
            android:id="@+id/cbFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Enable Filter"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCompatibilityScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Compatibility Score:"/>
            <CheckBox
                android:id="@+id/cbCompatibilityScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Enable Filter"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <me.bendik.simplerangeview.SimpleRangeView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rngCompatibilityScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:count="99"
                app:start="0"
                app:end="98"
                app:movable="true"
                app:minDistance="1"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tvStartRangeCompatibilityScore"
                android:layout_toEndOf="@+id/tvStartRangeCompatibilityScore"
                android:layout_toLeftOf="@+id/tvEndRangeCompatibilityScore"
                android:layout_toStartOf="@+id/tvEndRangeCompatibilityScore" />
            <TextView
                android:id="@+id/tvStartRangeCompatibilityScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tvEndRangeCompatibilityScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Age:"/>
            <CheckBox
                android:id="@+id/cbAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Enable Filter"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <me.bendik.simplerangeview.SimpleRangeView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rngAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:count="78"
                app:start="0"
                app:end="77"
                app:movable="true"
                app:minDistance="1"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tvStartRangeAge"
                android:layout_toEndOf="@+id/tvStartRangeAge"
                android:layout_toLeftOf="@+id/tvEndRangeAge"
                android:layout_toStartOf="@+id/tvEndRangeAge" />
            <TextView
                android:id="@+id/tvStartRangeAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tvEndRangeAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Height:"/>
            <CheckBox
                android:id="@+id/cbHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Enable Filter"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <me.bendik.simplerangeview.SimpleRangeView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rngHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:count="76"
                app:start="0"
                app:end="75"
                app:movable="true"
                app:minDistance="1"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tvStartRangeHeight"
                android:layout_toEndOf="@+id/tvStartRangeHeight"
                android:layout_toLeftOf="@+id/tvEndRangeHeight"
                android:layout_toStartOf="@+id/tvEndRangeHeight" />
            <TextView
                android:id="@+id/tvStartRangeHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="135"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tvEndRangeHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="210"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnResetFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"/>
        <Button
            android:id="@+id/btnCancelFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"/>
        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLY"/>
    </LinearLayout>
</LinearLayout>